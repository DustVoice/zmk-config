ZMK_COMBO(f_1,   &kp N1,        LT3 LM3,             FPS, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(f_2,   &kp N2,        LT2 LM2,             FPS, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
